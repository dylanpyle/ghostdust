{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2017"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"]
  },
  "include": [
    "./src/**/*"
  ]
}
